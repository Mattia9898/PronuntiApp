<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/buttonAvviaVocale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Avvia audio"
        android:layout_marginTop="230dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.278" />

    <Button
        android:id="@+id/buttonStoppaVocale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ferma audio"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="@+id/buttonAvviaVocale"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="@+id/buttonAvviaVocale"
        app:layout_constraintTop_toTopOf="@+id/buttonAvviaVocale"
        app:layout_constraintVertical_bias="0.278" />

    <Button
        android:id="@+id/buttonStopRegistrazione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stop registrazione"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="@+id/buttonStoppaVocale"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="@+id/buttonStoppaVocale"
        app:layout_constraintTop_toTopOf="@+id/buttonStoppaVocale"
        app:layout_constraintVertical_bias="0.278"/>

</androidx.constraintlayout.widget.ConstraintLayout>