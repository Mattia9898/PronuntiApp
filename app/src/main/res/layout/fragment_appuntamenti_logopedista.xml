<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="views.fragment.userLogopedista.appuntamenti.AppuntamentiLogopedistaFragment"
    android:background="@color/backgroundWhite"
    >

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollViewAppuntamento"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttonAddAppuntamento"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <androidx.appcompat.widget.Toolbar
                android:id="@id/toolBar"
                style="@style/styleToolBar"
                app:layout_constraintBottom_toTopOf="@+id/cardViewAppuntamento"
                tools:ignore="MissingConstraints"
                />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardViewAppuntamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/toolBar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/viewSeparatorAppuntamentiLogopedista"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="20dp"
                android:visibility="visible"
                app:cardElevation="8dp"
                >

                <LinearLayout
                    android:id="@+id/linearLayoutTitoloAppuntamentiLogopedista"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:padding="8dp"
                    android:elevation="2dp"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/nuovo_appuntamento_titolo"
                        android:layout_gravity="center"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:fontFamily="sans-serif-black"
                        android:layout_marginBottom="7dp"
                        />
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputLayoutPazienteAppuntamentoLogopedista"
                            style="@style/TextInputLayoutStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:elevation="3dp"
                            >
                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/patientAppuntamento"
                                style="@style/TextInputEditTextStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/insertPaziente"
                                android:inputType="none"
                                />
                        </com.google.android.material.textfield.TextInputLayout>
                        <ImageView
                            android:id="@+id/icLogoSearchPazienteAppuntamentiLogopedista"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/icona_ricerca"
                            android:layout_marginStart="-40dp"
                            android:layout_marginTop="21dp"
                            android:scaleType="fitCenter"
                            app:layout_constraintStart_toEndOf="@id/textInputLayoutPazienteAppuntamentoLogopedista"
                            app:layout_constraintTop_toTopOf="@id/textInputLayoutPazienteAppuntamentoLogopedista"
                            android:layout_gravity="end" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/textInputLayoutLuogoAppuntamentoLogopedista"
                        style="@style/TextInputLayoutStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        >

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/placeAppuntamento"
                            style="@style/TextInputEditTextStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/place"
                            android:inputType="none"
                            />

                    </com.google.android.material.textfield.TextInputLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputLayoutDataAppuntamentoLogopedista"
                            style="@style/TextInputLayoutStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/dateAppuntamento"
                                style="@style/TextInputEditTextStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/date"
                                android:inputType="none"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                />

                        </com.google.android.material.textfield.TextInputLayout>

                        <ImageButton
                            android:id="@+id/buttonBirthdatePatient"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/icona_datapicker"
                            android:layout_marginStart="-40dp"
                            android:layout_marginTop="21dp"
                            android:scaleType="fitCenter"
                            app:layout_constraintStart_toEndOf="@id/textInputLayoutDataAppuntamentoLogopedista"
                            app:layout_constraintTop_toTopOf="@id/textInputLayoutDataAppuntamentoLogopedista"
                            android:layout_gravity="end" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <GridLayout
                        android:id="@+id/gridLayoutTimeAppuntamento"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:columnCount="3"
                        android:rowCount="4"
                        android:padding="16dp"
                        android:alignmentMode="alignMargins"
                        android:columnOrderPreserved="true"
                        android:useDefaultMargins="true"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_gravity="center"
                        >

                        <TextView
                            android:id="@+id/ore9"
                            android:text="09:00"
                            style="@style/styleTextViewTime"
                            />

                        <TextView
                            android:id="@+id/ore9_30"
                            android:text="09:30"
                            style="@style/styleTextViewTime"
                            />

                        <TextView
                            android:id="@+id/ore10"
                            android:text="10:00"
                            style="@style/styleTextViewTime"
                            />

                        <TextView
                            android:id="@+id/ore10_30"
                            android:text="10:30"
                            style="@style/styleTextViewTime"
                            />

                        <TextView
                            android:id="@+id/ore11"
                            android:text="11:00"
                            style="@style/styleTextViewTime"
                            />

                        <TextView
                            android:id="@+id/ore11_30"
                            android:text="11:30"
                            style="@style/styleTextViewTime"
                            />

                        <TextView
                            android:id="@+id/ore12"
                            android:text="12:00"
                            style="@style/styleTextViewTime"
                            />

                        <TextView
                            android:id="@+id/ore12_30"
                            android:text="12:30"
                            style="@style/styleTextViewTime"
                            />

                        <TextView
                            android:id="@+id/ore13"
                            android:text="13:00"
                            style="@style/styleTextViewTime"
                            />

                        <TextView
                            android:id="@+id/ore13_30"
                            android:text="13:30"
                            style="@style/styleTextViewTime"
                            />

                        <TextView
                            android:id="@+id/ore14"
                            android:text="14:00"
                            style="@style/styleTextViewTime"
                            />

                        <TextView
                            android:id="@+id/ore14_30"
                            android:text="14:30"
                            style="@style/styleTextViewTime"
                            />
                    </GridLayout>

                    <Button
                        android:id="@+id/buttonConfirmAppuntamento"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/confirm"
                        />

                    <ImageButton
                        android:id="@+id/arrowCloseCardView"
                        android:layout_width="match_parent"
                        android:layout_height="24dp"
                        android:src="@drawable/icona_su"
                        android:background="@android:color/transparent"
                        />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <View
                android:id="@+id/viewSeparatorAppuntamentiLogopedista"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintTop_toBottomOf="@+id/cardViewAppuntamento"
                app:layout_constraintBottom_toTopOf="@+id/searchAppuntamento"
                app:layout_constraintStart_toStartOf="parent"
                />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/searchAppuntamento"
                style="@style/SearchBarStyle"
                android:layout_marginHorizontal="10dp"
                android:hint="@string/ricerca_appuntamento"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/viewSeparatorAppuntamentiLogopedista"
                app:layout_constraintBottom_toTopOf="@+id/recyclerViewAppuntamento"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rettangolo_bordo_grigio"
                />

            <ImageView
                android:id="@+id/icLogoSearchAppuntamentiLogopedista"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/icona_ricerca"
                android:layout_marginStart="-40dp"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toEndOf="@id/searchAppuntamento"
                app:layout_constraintTop_toTopOf="@id/searchAppuntamento"
                android:layout_gravity="end" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewAppuntamento"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/searchAppuntamento"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="parent"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="20dp"
                tools:listitem="@layout/item_paziente_in_lista_logopedista"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <Button
        android:id="@+id/buttonAddAppuntamento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nuovo_appuntamento"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginHorizontal="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        />

    <View
        android:id="@+id/viewSelectionPatient"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:elevation="1dp"
        />

    <LinearLayout
        android:id="@+id/linearLayoutPatientAppuntamento"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:elevation="2dp"
        android:layout_alignTop="@+id/nestedScrollViewAppuntamento"
        android:layout_marginTop="180dp"
        android:background="@drawable/rettangolo_bianco_bordo_grigio"
        android:padding="2dp"
        android:visibility="gone"
        >
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewAppuntamentoPaziente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backgroundSceltaPaziente"
                />
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>

</RelativeLayout>

