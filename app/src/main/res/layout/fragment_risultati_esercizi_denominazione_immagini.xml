<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@id/toolBar"
        style="@style/styleToolBar"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        android:paddingTop="10dp"
        android:elevation="1dp"
        />

    <ImageView
        android:id="@+id/imageViewSfondo"
        app:layout_constraintTop_toBottomOf="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_montagne"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewImmagineEsercizioDenominazione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/textViewEsercizio"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_gravity="center"
        app:cardCornerRadius="16dp"
        android:elevation="1dp"
        android:layout_margin="10dp"
        app:cardUseCompatPadding="true"
        >

        <ImageView
            android:id="@+id/imageViewImmagineEsercizioDenominazione"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            />
    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/viewOverlaySfondo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80000000"
        android:layout_marginTop="65dp"
        app:layout_constraintTop_toTopOf="@+id/imageViewSfondo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/textViewEsercizio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:elevation="1dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/titleEsercizioDenominazioneImmagine"
        android:textColor="@color/white"
        android:textSize="@dimen/size_text_title_esercizio"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayoutRisultatoEsercizioSequenzaParole"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80000000"
        android:paddingVertical="10dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/risultatoEsercizio"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="40dp"
            android:layout_marginBottom="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="5dp"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/imageViewCheckEsercizio"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/icona_check"
                android:layout_gravity="center"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/imageViewWrongEsercizio"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/icona_sbagliato"
                android:layout_gravity="center"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/imageViewNonSvoltoEsercizio"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/icona_non_eseguito"
                android:layout_gravity="center"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/textAiutiUtilizzati"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/subHeaderTextSize"
                android:text="@string/aiutiUtilizzati"
                android:paddingStart="20dp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutRispostaData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="100dp"
            >

            <ImageButton
                android:id="@+id/imageButtonAvviaAudioRegistrato"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/icona_play"
                android:scaleType="centerCrop"
                android:background="?attr/selectableItemBackgroundBorderless"
                />

            <ImageButton
                android:id="@+id/imageButtonPausaAudioRegistrato"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/icona_pausa"
                android:scaleType="centerCrop"
                android:background="?attr/selectableItemBackgroundBorderless"
                />

            <TextView
                android:id="@+id/textAudioRegistrato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/subHeaderTextSize"
                android:text="@string/rispostaData"
                android:paddingStart="20dp"
                />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>