<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutScenario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_neve_montagne"
    android:fitsSystemWindows="true"
    tools:context="views.fragment.userPaziente.giochi.scenari.ScenarioFragment"
    >

    <views.fragment.userPaziente.giochi.FineScenarioEsercizioView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fineScenarioView"
        android:elevation="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/line_posizioni"
        app:layout_constraintTop_toBottomOf="@+id/posizione_secondo_esercizio"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="175dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="125dp"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:layout_marginEnd="65dp"
        android:scaleX="-1"
        android:scaleY="1.05"
        android:src="@drawable/line_posizioni"
        app:layout_constraintBottom_toTopOf="@+id/posizione_secondo_esercizio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/posizione_primo_esercizio"
        style="@style/stylePosizioniScenario"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="112dp"
        android:src="@drawable/igloo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/posizione_secondo_esercizio"
        style="@style/stylePosizioniScenario"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="320dp"
        android:src="@drawable/caramella_rossa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/posizione_terzo_esercizio"
        style="@style/stylePosizioniScenario"
        android:layout_marginStart="76dp"
        android:layout_marginBottom="528dp"
        android:src="@drawable/caramella_rossa"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
