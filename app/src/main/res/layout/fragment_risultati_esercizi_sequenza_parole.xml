<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <androidx.appcompat.widget.Toolbar
        android:id="@id/toolBar"
        style="@style/styleToolBar"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        android:paddingTop="10dp"
        android:elevation="1dp"
        />

    <ImageView
        android:id="@+id/imageViewSfondo"
        app:layout_constraintTop_toBottomOf="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_spiaggia"
        />

    <View
        android:id="@+id/viewOverlaySfondo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80000000"
        android:layout_marginTop="65dp"
        app:layout_constraintTop_toTopOf="@+id/imageViewSfondo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <TextView
        android:id="@+id/textViewEsercizioCoppiaImmagini"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titleEsercizioSequenzaParole"
        android:padding="10dp"
        android:textSize="@dimen/size_text_title_esercizio"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/seekBarScorrimentoAudioEsercizioSequenzaParole"
        android:layout_marginBottom="0dp"
        android:elevation="1dp"
        />

    <android.widget.SeekBar
        android:id="@+id/seekBarScorrimentoAudioEsercizioSequenzaParole"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progressBackgroundTint="@color/buttonMicBackground"
        android:progressTint="@color/yellowTheme"
        android:thumbTint="@color/yellowTheme"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewEsercizioCoppiaImmagini"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/frameLayoutPlayPauseEsercizioSequenzaParole"
        />

    <FrameLayout
        android:id="@+id/frameLayoutPlayPauseEsercizioSequenzaParole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:src="@drawable/icona_suggerimento"
        android:tooltipText="@string/suggestEsercizioDenominazione"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutRisultatoEsercizioSequenzaParole"
        app:layout_constraintTop_toBottomOf="@+id/seekBarScorrimentoAudioEsercizioSequenzaParole"
        android:elevation="1dp">

        <ImageButton
            android:id="@+id/playButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/icona_play"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/pauseButton"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/icona_pausa"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:visibility="gone"
            />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/linearLayoutRisultatoEsercizioSequenzaParole"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80000000"
        android:paddingVertical="10dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/risultatoEsercizio"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="40dp"
            android:layout_marginBottom="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="5dp"
            android:gravity="center"
            >

            <ImageView
                android:id="@+id/imageViewCheckEsercizio"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/icona_check"
                android:layout_gravity="center"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/imageViewWrongEsercizio"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/icona_sbagliato"
                android:layout_gravity="center"
                android:visibility="gone"
                />

            <ImageView
                android:id="@+id/imageViewNonSvoltoEsercizio"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/icona_non_eseguito"
                android:layout_gravity="center"
                android:visibility="gone"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayoutRispostaData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="100dp"
            >

            <ImageButton
                android:id="@+id/imageButtonAvviaAudioRegistrato"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/icona_play"
                android:scaleType="centerCrop"
                android:background="?attr/selectableItemBackgroundBorderless"
                />

            <ImageButton
                android:id="@+id/imageButtonPausaAudioRegistrato"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/icona_pausa"
                android:scaleType="centerCrop"
                android:background="?attr/selectableItemBackgroundBorderless"
                />

            <TextView
                android:id="@+id/textAudioRegistrato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="@dimen/subHeaderTextSize"
                android:text="@string/rispostaData"
                android:paddingStart="20dp"
                />

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>