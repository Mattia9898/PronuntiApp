<resources xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="Theme.PronuntiAppActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="customFontChild">
        <item name="fontFamily">@font/custom_font</item>
    </style>

    <style name="text14sp">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="styleTextPersonaggi">
        <item name="fontFamily">@font/custom_font</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:outlineAmbientShadowColor">@color/black</item>
        <item name="android:outlineSpotShadowColor">@color/black</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
    </style>

    <style name="styleNavBarPazienteButton">
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_width">48dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="styleToolBar" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>

    <style name="styleToolBarPaziente" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="android:paddingTop">20dp</item>
    </style>

    <style name="Theme.PronuntiAppNoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TrasparentButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="hintTextColor">@color/hintTextColor</item>
        <item name="hintTextAppearance">@style/TextInputLayoutStyle</item>
        <item name="android:inputType">textPersonName</item>
    </style>

    <style name="TextInputEditTextStyleSex">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="hintTextColor">@color/hintTextColor</item>
        <item name="hintTextAppearance">@style/TextInputLayoutStyle</item>
    </style>

    <style name="SearchBarStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="hintTextColor">@color/hintTextColor</item>
        <item name="hintTextAppearance">@style/TextInputLayoutStyle</item>
        <item name="android:inputType">text</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextInputLayoutHintText</item>
        <item name="errorTextAppearance">@style/TextInputLayoutErrorText</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="android:textColorHint">@color/hintTextColor</item>
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
        <item name="android:background">@drawable/rettangolo_bordo_grigio</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Style for hint text in TextInputLayout -->
    <style name="TextInputLayoutHintText" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/hintTextColor</item>
    </style>

    <!-- Style for error text in TextInputLayout -->
    <style name="TextInputLayoutErrorText" parent="TextAppearance.Design.Error">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <style name="PersonaggiStyle">
        <item name="android:layout_width">@dimen/personaggioWidthDim</item>
        <item name="android:layout_height">@dimen/personaggioWidthDim</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="CoinsIconStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>

    <style name="NomePersonaggioStyle">
        <item name="android:layout_width">@dimen/personaggioWidthDim</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="stylePosizioniScenario">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">110dp</item>
    </style>

    <style name="styleTextViewTime">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="android:background">@drawable/rettangolo_bianco_bordo_grigio</item>
        <item name="android:gravity">center</item>
    </style>

</resources>